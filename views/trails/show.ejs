<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card" style="width: 18rem;">
                <img src="<%= trail.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= trail.title %>
                    </h5>
                    <p class="card-text">
                        <%= trail.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= trail.location %>
                    </li>
                    <li class="list-group-item">$<%= trail.price %>
                    </li>

                </ul>
                <div class="card-body">
                    <a class='card-link btn btn-info' href="/trails/<%= trail._id %>/edit">Edit</a>
                    <form class='d-inline' action="/trails/<%= trail._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <h2>Review & Rate this trail</h2>
            <form action="/trails/<%= trail._id%>/reviews" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input id="rating" class="form-range" type="range" min="1" max="5" name="review[rating]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class='form-control' name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success mb-3">Submit</button>
            </form>
        </div>
    </div>